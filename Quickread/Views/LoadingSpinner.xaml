<UserControl x:Class="QuickRead.Views.Controls.LoadingSpinner"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             Width="50" Height="50">
    <Grid>
        <Ellipse Width="40" Height="40" StrokeThickness="4" Stroke="#00AEEF" Opacity="0.3"/>
        <Ellipse Width="40" Height="40" StrokeThickness="4" Stroke="#00AEEF" StrokeDashArray="1,2">
            <Ellipse.RenderTransform>
                <RotateTransform x:Name="SpinnerRotate" />
            </Ellipse.RenderTransform>
            <Ellipse.Triggers>
                <EventTrigger RoutedEvent="Loaded">
                    <BeginStoryboard>
                        <Storyboard RepeatBehavior="Forever">
                            <DoubleAnimation Storyboard.TargetName="SpinnerRotate"
                                             Storyboard.TargetProperty="Angle"
                                             From="0" To="360" Duration="0:0:1" />
                        </Storyboard>
                    </BeginStoryboard>
                </EventTrigger>
            </Ellipse.Triggers>
        </Ellipse>
    </Grid>
</UserControl>
