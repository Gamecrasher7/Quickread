<Window x:Class="QuickRead.ReaderWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Reader" Height="800" Width="600"
        Background="#FF1F1F1F"
        WindowStartupLocation="CenterScreen"
        MouseLeftButtonDown="Window_MouseLeftButtonDown">

	<Grid>
		<!-- Navigation Buttons -->
		<StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0,10,0,0" x:Name="TopBar">
			<Button Content="&lt;&lt;" Width="50" Margin="5" Click="Prev_Click"/>
			<Button Content="&gt;&gt;" Width="50" Margin="5" Click="Next_Click"/>
			<Button Content="Zoom +" Width="80" Margin="5" Click="ZoomIn_Click"/>
			<Button Content="Zoom -" Width="80" Margin="5" Click="ZoomOut_Click"/>
		</StackPanel>

		<!-- Manga Image Display -->
		<ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Auto" Margin="0,50,0,0">
			<Image x:Name="MangaImage" Stretch="Uniform" RenderTransformOrigin="0.5,0.5">
				<Image.RenderTransform>
					<ScaleTransform x:Name="ImageScale" ScaleX="1.0" ScaleY="1.0"/>
				</Image.RenderTransform>
			</Image>
		</ScrollViewer>
	</Grid>
</Window>
