<Window x:Class="QuickRead.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="QuickRead" Height="700" Width="1100"
        WindowStartupLocation="CenterScreen"
        Background="#FF1F1F1F"
        Foreground="White">

	<Grid Margin="10">
		<Grid.RowDefinitions>
			<RowDefinition Height="Auto"/>
			<RowDefinition Height="*"/>
			<RowDefinition Height="30"/>
			<!-- Statusleiste -->
		</Grid.RowDefinitions>

		<!-- Top Bar -->
		<StackPanel Orientation="Horizontal" Grid.Row="0" Margin="0,0,0,10" VerticalAlignment="Center">
			<!-- Suchfeld mit Placeholder über Adorner -->
			<Grid Width="300" Margin="0,0,10,0" Height="30">
				<TextBox x:Name="SearchBox" Background="#FF2A2A2A" Foreground="White"
                         VerticalContentAlignment="Center" Padding="5,0"/>
				<TextBlock Text="Search Manga..." IsHitTestVisible="False"
                           Foreground="Gray" Margin="8,0,0,0" VerticalAlignment="Center"
                           x:Name="SearchPlaceholder"/>
			</Grid>

			<ComboBox x:Name="SourceComboBox" Width="150" Margin="0,0,10,0" Height="30" SelectionChanged="SourceComboBox_SelectionChanged" Background="#FFFBFBFB" Foreground="#FFF70707">
				<ComboBoxItem Content="Comick" IsSelected="True"/>
				<ComboBoxItem Content="MangaPark"/>
			</ComboBox>

			<Button Content="Search" Width="100" Height="30" Click="SearchButton_Click"/>

			<ComboBox x:Name="LanguageComboBox" Width="100" Margin="10,0,0,0" Height="30" SelectionChanged="LanguageComboBox_SelectionChanged">
				<ComboBoxItem Content="Deutsch" Tag="de" />
				<ComboBoxItem Content="English" Tag="en" IsSelected="True"/>
			</ComboBox>
		</StackPanel>

		<!-- Main Content -->
		<Grid Grid.Row="1">
			<Grid.ColumnDefinitions>
				<ColumnDefinition Width="3*"/>
				<ColumnDefinition Width="2*"/>
			</Grid.ColumnDefinitions>

			<!-- Manga List -->
			<ListBox x:Name="MangaList" Grid.Column="0" Margin="0,0,10,0"
                     SelectionChanged="MangaList_SelectionChanged" Background="#FF2A2A2A" Foreground="White"/>

			<!-- Chapter List -->
			<StackPanel Grid.Column="1">
				<TextBlock Text="Chapters" FontSize="18" FontWeight="Bold" Margin="0,0,0,10"/>
				<ListBox x:Name="ChapterList" SelectionChanged="ChapterList_SelectionChanged" Background="#FF2A2A2A" Foreground="White"/>
			</StackPanel>

			<!-- Ladeanimation (Spinner) rechts unten -->
			<Grid Grid.Column="1" VerticalAlignment="Bottom" HorizontalAlignment="Right" Margin="0,10,10,10" Width="40" Height="40" x:Name="LoadingGrid" Visibility="Collapsed">
				<Ellipse Width="40" Height="40" Stroke="Gray" StrokeThickness="5" Opacity="0.3"/>
				<Path x:Name="SpinnerPath" Stroke="White" StrokeThickness="5" StrokeStartLineCap="Round" StrokeEndLineCap="Round"
                      Data="M20,5 A15,15 0 1 1 19.9,5" RenderTransformOrigin="0.5,0.5">
					<Path.RenderTransform>
						<RotateTransform x:Name="SpinnerRotate" Angle="0"/>
					</Path.RenderTransform>
				</Path>
			</Grid>
		</Grid>

		<!-- Statusleiste -->
		<Border Grid.Row="2" Background="#FF2A2A2A" Padding="5" CornerRadius="5">
			<TextBlock x:Name="StatusText" Foreground="LightGray" VerticalAlignment="Center" Text="Ready"/>
		</Border>
	</Grid>
</Window>
